@{
    ViewData["Title"] = "Salariés";
}

<form class="container" asp-action="SubmitFormSalarie" asp-controller="Admin" method="post">
    @if (ViewBag.Error ?? true)
     {
        <div class="row m-1 justify-content-center">
            <div class="alert col-6 alert-danger">
            @ViewBag.Message
        </div>
        </div>
     }
    <div class="row m-1 justify-content-center">
        <input type="text" name="Nom" placeholder="Nom du salarié" class="form-control col-6 p-1" />
    </div>
    <div class="row m-1 justify-content-center">
        <input type="text" name="Prenom" placeholder="Prénom du salarié" class="form-control col-6 p-1" />
    </div>
    <div class="row m-1 justify-content-center">
        <input type="text" name="Fixe" placeholder="Téléphone fixe du salarié" class="form-control col-6 p-1" />
    </div>
    <div class="row m-1 justify-content-center">
        <input type="text" name="Portable" placeholder="Téléphone portable du salarié" class="form-control col-6 p-1" />
    </div>
    <div class="row m-1 justify-content-center">
        <input type="text" name="Email" placeholder="Mail éléctronique" class="form-control col-6 p-1" />
    </div>
    <div class="row m-1 justify-content-center">
        <button type="submit" class="btn btn-secondary col-6 p-1"> Valider</button>
    </div>
</form>
